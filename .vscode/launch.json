{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Edge Device (Laptop)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/edge/src/main.py",
            "cwd": "${workspaceFolder}/edge",
            "console": "integratedTerminal"
        },
        {
            "name": "Backend API (Laptop)",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": ["main:app", "--host", "127.0.0.1", "--port", "8000", "--reload"],
            "cwd": "${workspaceFolder}/backend/src",
            "console": "integratedTerminal"
        }
    ]
}